<div data-controller="editor" data-editor-events-value="<%= @events %>">
  <!-- Calendar Control Buttons -->
  <div class="calendar-controls">
    <button data-action="click->editor#prev">Previous</button>
    <button data-action="click->editor#today">Today</button>
    <button data-action="click->editor#next">Next</button>
    <select data-action="change->editor#changeView">
      <option value="month">Month</option>
      <option value="week">Week</option>
      <option value="day">Day</option>
    </select>
    <button data-action="click->editor#openEventModal">Add Event</button>
  </div>

  <!-- Calendar Container -->
  <div data-editor-target="calendar" id="calendar" style="height: 800px;"></div>
  <%= render 'shared/modal' %>
</div>
