<div class="container-md pt-3">
<h1>Children expenses</h1>
  <div class="col-12 my-3">
    <% @expenses.each do |expense| %>
      <div class ="card" >
        <%= expense.date %>
        <%= expense.description %>
        <%= expense.amount %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Add an expense', new_child_expense_path, class: 'btn btn-primary' %>
<%= link_to 'Delete', child_path(@child), data: { "turbo-method": :delete, confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
