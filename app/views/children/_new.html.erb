  <%= simple_form_for [family, child] do |form| %>
    <%= form.input :first_name, label: "First Name", input_html: { class: "form-control" } %>
    <%= form.input :last_name, label: "Last Name", input_html: { class: "form-control" } %>
    <%= form.input :birth_date, as: :string, label: "Birth Date", input_html:{ data: { controller: "datepicker" } } %>
    <%= form.submit "Add a child", class: "btn btn-flat" %>
  <% end %>
