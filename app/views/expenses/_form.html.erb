<%= simple_form_for [@child, @expense] do |f| %>
  <%= f.input :amount, label: "Amount", placeholder: "Enter the amount" %>
  <%= f.input :description, label: "Description", placeholder: "Enter the description" %>
  <%= f.input :date, label: "Date" %>
  <%= f.button :submit, "Create Expense", class: "btn btn-primary" %>
  <%= f.button :submit, "Cancel", class: "btn btn-secondary" %>
<% end %>
